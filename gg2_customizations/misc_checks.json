{
  "regexes": [
    {
      "match": "(\\s+-|-\\s+)",
      "replacement": ["-"],
      "hint": "Remove space around hyphens"
    },
    {
      "match": "\\s+([.!?;:,])",
      "replacement": ["\\1"],
      "hint": "Remove space before punctuation"
    },
    {
      "match": "(\\s+)(['\"])(\\s+)",
      "replacement": ["\\2", "\\1\\2", "\\2\\3"],
      "hint": "Space around quotes: keep NONE, to LEFT, to RIGHT"
    },
    {
      "match": "(\\s+)([\\({\\[\\]}\\)])(\\s+)",
      "replacement": ["\\2", "\\1\\2", "\\2\\3"],
      "hint": "Space around brackets: keep NONE, to LEFT, to RIGHT"
    },
    {
      "match": "(Dr|M(me|lle|essrs|rs?|grs?)|St|Fr|Rev)(\\s)",
      "replacement": ["\\1.\\3"],
      "hint": "Add missing period after title"
    },
    {
      "match": "([AP]\\.)(\\s*)(M\\.)",
      "replacement": ["\\1 \\3", "\\1\\3"],
      "hint": "Add/remove missing space in A.M., P.M."
    },
    {
      "match": "([^A-Za-z])([A-Z]\\.\\s*[A-Z]\\.)([^A-Za-z])",
      "replacement": ["\\1<sc>\\2</sc>\\3"],
      "hint": "Add missing <sc> for A.D., B.C., etc."
    },
    {
      "match": "( )( +)",
      "replacement": ["\\1"],
      "hint": "Collapse multiple spaces (except in no-wrap blocks)"
    },
    {
      "match": "<tb>",
      "replacement": [],
      "hint": "Look at thought breaks for improper use"
    },
    {
      "match": "(\\.\\.\\.)",
      "replacement": ["\\1."],
      "hint": "Check ellipses for missing 4th period"
    },
    {
      "match": "[^-]---[^-]",
      "replacement": ["--", "----"],
      "hint": "Check for 3 dashes (not 2 or 4)"
    },
    {
      "match": "[^-]-----[^-]",
      "replacement": ["----"],
      "hint": "Check for 5 dashes (not 4)"
    },
    {
      "match": "(\\s+)(--(--)?)(\\s+)",
      "replacement": ["\\2", "\\1\\2", "\\2\\4"],
      "hint": "Replace space around em/long-dash: keep NONE, to LEFT, to RIGHT"
    },
    {
      "match": "(\\^)(\\S+)",
      "replacement": ["\\1{\\2}"],
      "hint": "Adding missing {} to superscripts"
    }
  ]
}
