{
  "regexes": [
    {
      "match": "\\b((Mr|Mrs|Dr|M|Rev|Hon)\\.)",
      "replacement": [
        "<abbr>\\1</abbr>",
        "<abbr title=\"Monsieur\" lang=\"fr\">\\1</abbr>",
        "<abbr title=\"Reverend\">\\1</abbr>",
        "<abbr title=\"Honorary\">\\1</abbr>",
        "<abbr title=\"Honorable\">\\1</abbr>",
        "<abbr title=\"Honourable\">\\1</abbr>"
      ],
      "hint": "Common titles"
    },
    {
      "match": "\\b((\\d*(1st|2nd|3rd)|\\d+th)\\.?)",
      "replacement": ["<abbr>\\1</abbr>"],
      "hint": "Numeric counting"
    },
    {
      "match": "\\b((etc|i\\.\\s*e|e\\.\\s*g|cf|Cf|viz)\\.)",
      "replacement": [
        "<abbr>\\1</abbr>",
        "<abbr title=\"confer\">\\1</abbr>",
        "<abbr title=\"Confer\">\\1</abbr>",
        "<abbr title=\"videlicet\" lang=\"la\">\\1</abbr>"
      ],
      "hint": "Common Latin"
    },
    {
      "match": "\\b(Fig\\.)(\\s+)(\\d+)",
      "replacement": ["<abbr>\\1</abbr>\\2\\3"],
      "hint": "Labeled figures with numeric series"
    },
    {
      "match": "\\b(A\\.\\s*D\\.|B\\.\\s*C\\.|[AP]\\.\\s*M\\.)",
      "replacement": ["<abbr class=\"spell\">\\1</abbr>"],
      "hint": "A.D., B.C., A.M., P.M.: class=spell"
    },
    {
      "match": "\\b(M\\.\\s*D\\.)",
      "replacement": [
        "<abbr class=\"spell\">\\1</abbr>"
      ],
      "hint": "M.D.: class=spell (titles)"
    },
    {
      "match": "\\b(St\\.)",
      "replacement": [
        "<abbr title=\"Saint\">\\1</abbr>",
        "<abbr title=\"Street\">\\1</abbr>"
      ],
      "hint": "Saint or Street?"
    },
    {
      "match": "\\b(\\d*[23]d)\\b",
      "replacement": [
        "<abbr title=\"second\">\\1</abbr>",
        "<abbr title=\"third\">\\1</abbr>"
      ],
      "hint": "Archaic second or third"
    },
    {
      "match": "\\b(&c\\.)",
      "replacement": ["<abbr title=\"etc.\">\\1</abbr>"],
      "hint": "Archaic etc."
    },
    {
      "match": "\\b([IVXLCDM]+|[ivxlcdm]+)(\\.)",
      "replacement": ["<abbr title=\"\\N\\1\\E\">\\1\\2</abbr>"],
      "hint": "Roman numerals"
    },
    {
      "match": "\\b(([pP]|pp)\\.)",
      "replacement": [
        "<abbr title=\"page\">\\1</abbr>",
        "<abbr title=\"Page\">\\1</abbr>",
        "<abbr title=\"pages\">\\1</abbr>",
        "<abbr title=\"Pages\">\\1</abbr>"
      ],
      "hint": "Pages"
    },
    {
      "match": "\\b(([vV]ol|[vV]ols|[vV])\\.)",
      "replacement": [
        "<abbr title=\"volume\">\\1</abbr>",
        "<abbr title=\"Volume\">\\1</abbr>",
        "<abbr title=\"volumes\">\\1</abbr>",
        "<abbr title=\"Volumes\">\\1</abbr>"
      ],
      "hint": "Volumes"
    },
    {
      "match": "\\b(([eE]d|[eE]dit)\\.)",
      "replacement": [
        "<abbr title=\"edition\">\\1</abbr>",
        "<abbr title=\"Edition\">\\1</abbr>",
        "<abbr title=\"edited by\">\\1</abbr>",
        "<abbr title=\"Edited by\">\\1</abbr>",
        "<abbr title=\"editor\">\\1</abbr>",
        "<abbr title=\"Editor\">\\1</abbr>"
      ],
      "hint": "Edited, Editions, Editor"
    },
    {
      "match": "\\b(([tT]ransl?|[tT]r)\\.)",
      "replacement": [
        "<abbr title=\"translated by\">\\1</abbr>",
        "<abbr title=\"Translated by\">\\1</abbr>",
        "<abbr title=\"translation\">\\1</abbr>",
        "<abbr title=\"Translation\">\\1</abbr>",
        "<abbr title=\"translator\">\\1</abbr>",
        "<abbr title=\"Translator\">\\1</abbr>"
      ],
      "hint": "Translate"
    },
    {
      "match": "\\b((Card|Fr|Mgrs?|Bp)\\.)",
      "replacement": [
        "<abbr title=\"Cardinal\">\\1</abbr>",
        "<abbr title=\"Father\">\\1</abbr>",
        "<abbr title=\"Monseigneur\" lang=\"fr\">\\1</abbr>",
        "<abbr title=\"Messieurs\" lang=\"fr\">\\1</abbr>",
        "<abbr title=\"Bishop\">\\1</abbr>"
      ],
      "hint": "Religious honorifics"
    },
    {
      "match": "\\b(([12] (Thess|Peter)|(Heb|Rom|Apoc|Rev|Deut))\\.)",
      "replacement": [
        "<abbr title=\"First Thessalonians\">\\1</abbr>",
        "<abbr title=\"Second Thessalonians\">\\1</abbr>",
        "<abbr title=\"First Peter\">\\1</abbr>",
        "<abbr title=\"Second Peter\">\\1</abbr>",
        "<abbr title=\"Romans\">\\1</abbr>",
        "<abbr title=\"Hebrews\">\\1</abbr>",
        "<abbr title=\"Apocalypse\">\\1</abbr>",
        "<abbr title=\"Revelation\">\\1</abbr>",
        "<abbr title=\"Deuteronomy\">\\1</abbr>"
      ],
      "hint": "Bible citations"
    },
    {
      "match": "\\b((Ms|MS|ms)\\.)",
      "replacement": [
        "<abbr title=\"manuscript\">\\1</abbr>",
        "<abbr title=\"Manuscript\">\\1</abbr>"
      ],
      "hint": "Manuscript"
    },
    {
      "match": "ยง",
      "replacement": [
        "<abbr title=\"section\">\\1</abbr>",
        "<abbr title=\"Section\">\\1</abbr>"
      ],
      "hint": "Section"
    },
    {
      "match": "\\b((8vo|4to|6mo|12mo|16mo)\\.)",
      "replacement": [
        "<abbr title=\"octavo\">\\1</abbr>",
        "<abbr title=\"Octavo\">\\1</abbr>",
        "<abbr title=\"quarto\">\\1</abbr>",
        "<abbr title=\"Quarto\">\\1</abbr>",
        "<abbr title=\"sexto\">\\1</abbr>",
        "<abbr title=\"Sexto\">\\1</abbr>",
        "<abbr title=\"duodecimo\">\\1</abbr>",
        "<abbr title=\"Duodecimo\">\\1</abbr>",
        "<abbr title=\"sextodecimo\">\\1</abbr>",
        "<abbr title=\"Sextodecimo\">\\1</abbr>"
      ],
      "hint": "Page sizes"
    },
    {
      "match": "\\b((\\d*\\s*)(ff\\.))",
      "replacement": [
        "\\2<abbr title=\"and following\">\\3</abbr>"
      ],
      "hint": "ff.: following"
    },
    {
      "match": "\\b(sqq?\\.)",
      "replacement": [
        "<abbr title=\"following\">\\1</abbr>",
        "<abbr title=\"and following\">\\1</abbr>",
        "<abbr title=\"sequens\" lang=\"la\">\\1</abbr>"
      ],
      "hint": "sq., sqq.: following/sequens"
    }
  ]
}
